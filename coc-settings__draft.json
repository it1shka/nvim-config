{
  "clangd.path": "/usr/bin/clangd",
  "tsserver.inlayHint.enable": true,
  "tsserver.typescript.inlayHints": true,
  "tsserver.javascript.inlayHints": true,
  "clangd.inlayHint.enable": true,

  "zig.enabled": true,
  "zig.startUpMessage": true,
  "zig.path": "zls",
  "zig.debugLog": false,

  "languageserver": {
    "erlang": {
      "command": "erlang_ls",
      "filetypes": ["erlang"]
    },
    "csharp-ls": {
      "command": "~/.dotnet/tools/csharp-ls",
      "filetypes": ["cs"],
      "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
    },
    "kotlin-language-server": {
      "command": "kotlin-language-server",
      "filetypes": ["kotlin"]
    },
    "arduino": {
      "command": "arduino-language-server",
      "filetypes": ["arduino"],
      "args": [
        "-cli", "/opt/homebrew/bin/arduino-cli",
        "-clangd", "/usr/bin/clangd",
        "-cli-config", "/Users/tikhon/Library/Arduino15/arduino-cli.yaml",
        "-fqbn", "arduino:avr:uno",
        "-log", "/Users/tikhon/logs/arduino.log"
      ]
    }
  }
}
